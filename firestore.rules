service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth.uid != null;
    }
    function isUserInRoom(roomId) {
      return request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.memberIds;
    }
    function isSentFromCorrectId() {
      return request.auth.uid == request.resource.data.sentFromAccountId;
    }

    match /rooms/{roomId} {
      allow read: if isAuthenticated()
                  && isUserInRoom(roomId)
      
      match /messages/{messageId} {
        allow read, create: if isAuthenticated()
                            && isUserInRoom(roomId)
                            && isSentFromCorrectId();
      }
    }

    match /accounts/{account} {
      allow read, write: if request.auth.uid == account;

      match /unreadMessages/{unreadMessageId} {
        allow read, write: if request.auth.uid == account;
      }
    }
  }
}
