{
  "private": false,
  "name": "common-messanger",
  "version": "1.1.2",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "lint": "CURRENT_BRANCH=`git symbolic-ref --short HEAD` && git diff --name-only --diff-filter=ACMR origin/develop..${CURRENT_BRANCH} -- '*.ts' '*.tsx' '*.json' | xargs yarn eslint",
    "lintfix": "prettier --write '**/*.{ts,tsx}' && eslint --ext .tsx,.ts --fix ."
  },
  "description": "common messanger modules",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kahirokunn/common-messanger.git"
  },
  "keywords": [],
  "author": "kahirokunn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kahirokunn/common-messanger/issues"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "js-sha256": "^0.9.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "firebase": "^6.6.2",
    "firebase-tools": "^7.3.2",
    "husky": "^3.0.5",
    "lint-staged": "^9.3.0",
    "prettier": "^1.18.2",
    "rxfire": "^3.8.2",
    "rxjs": "^6.5.3",
    "typescript": "^3.6.3"
  },
  "peerDependencies": {
    "firebase": "^6.6.2",
    "rxfire": "^3.8.2",
    "rxjs": "^6.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  }
}
